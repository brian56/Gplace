<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/padding_medium"
              android:layout_marginRight="48dp"
              android:orientation="vertical"
              android:background="@color/background_material_light"
              tools:context="com.dqhuynh.gplace.ui.MainActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/border_radius"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_medium"
            android:weightSum="100"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >

            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10">

                <com.rey.material.widget.ProgressView
                    android:id="@+id/progressCurrentLocation"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_centerInParent="true"
                    app:pv_autostart="true"
                    app:pv_circular="true"
                    app:pv_progressStyle="@style/ColorsCircularProgressDrawableStyle"
                    app:pv_progressMode="indeterminate"/>

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/bt_height"
                    android:layout_height="@dimen/bt_height"
                    android:visibility="invisible"
                    android:src="@drawable/ic_launcher"
                    android:id="@+id/btnCurrentLocation"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="90">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextView"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:selectAllOnFocus="true"
                    android:textSize="@dimen/textSize_small"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:padding="@dimen/padding_medium"
                    android:background="@drawable/edt_background"
                    >
                </AutoCompleteTextView>

                <ImageView
                    android:id="@+id/btnClearText"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_launcher"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/border_radius"
            android:layout_marginTop="@dimen/margin_medium"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_medium"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="@dimen/bt_height"
                        android:src="@drawable/ic_launcher"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="90"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:text="Add place type to search"
                        android:textSize="@dimen/textSize_medium"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="match_parent"></LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="90"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <org.apmem.tools.layouts.FlowLayout
                            xmlns:f="http://schemas.android.com/apk/res/com.dqhuynh.gplace"
                            android:id="@+id/placeTypeContainer"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            f:layoutDirection="ltr"
                            f:weightDefault="1.0"
                            android:gravity="fill"
                            >
                        </org.apmem.tools.layouts.FlowLayout>

                        <com.rey.material.widget.Button
                            android:id="@+id/btnAddPlaceType"
                            style="@style/RaiseWaveColorButtonRippleStyle"
                            android:layout_width="128dp"
                            android:layout_height="36dp"
                            android:textAllCaps="false"
                            android:focusable="true"
                            android:textColor="@color/white"
                            android:text="Add"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/border_radius"
            android:layout_marginTop="@dimen/margin_medium"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:padding="@dimen/padding_medium"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="@dimen/bt_height"
                    android:src="@drawable/ic_launcher"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="90"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:text="Extra options"
                    android:textSize="@dimen/textSize_medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:weightSum="100"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="match_parent"
                    >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="90"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/margin_medium"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sort by"
                            android:textSize="@dimen/textSize_medium"/>

                        <com.rey.material.widget.RadioButton
                            style="@style/RadioButtonDrawable"
                            android:id="@+id/radProminence"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Prominence"
                            android:textSize="@dimen/textSize_small"
                            android:layout_marginLeft="@dimen/margin_medium"
                            android:checked="true"
                            android:gravity="center_vertical"/>

                        <com.rey.material.widget.RadioButton
                            style="@style/RadioButtonDrawable"
                            android:id="@+id/radDistance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_medium"
                            android:text="Distance"
                            android:textSize="@dimen/textSize_small"
                            android:checked="false"
                            android:gravity="center_vertical"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/tvRadius"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Radius: 5 km"
                            android:textSize="@dimen/textSize_medium"/>

                        <SeekBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/seekBarRadius"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:max="50"
                            android:thumb="@drawable/seekbar_thumb_background"
                            android:progressDrawable="@drawable/seekbar_progress_background"
                            android:progress="5"
                            />

                        <!-- <com.rey.material.widget.Slider
                             style="@style/Material.Widget.Slider.Discrete"
                             android:id="@+id/sliderRadius"
                             android:layout_width="0dp"
                             android:layout_height="wrap_content"
                             android:layout_weight="0.8"
                             android:layout_marginLeft="@dimen/margin_medium"
                             android:gravity="center"
                             app:sl_stepValue="1"
                             app:sl_minValue="1"
                             app:sl_maxValue="50"/>-->

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <com.rey.material.widget.Button
        android:id="@+id/btnSearch"
        style="@style/RaiseWaveColorButtonRippleStyle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="0"
        android:textAllCaps="false"
        android:focusable="true"
        android:textColor="@color/white"
        android:text="Search"/>
</LinearLayout>